<form class="w-full max-w-sm mt-10" action="/festivals/:festivalID/edit" method="post" enctype="multipart/form-data">
 <input type="hidden" value="{{ data._id }}" name="id">

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
        Festival Name
      </label>
    </div>
    <div class="md:w-2/3">
      <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="name" type="text" placeholder="name" name="name" value="{{ data.name }}">
    </div>
  </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
        Country
      </label>
    </div>
    <div class="md:w-2/3">
        <select name="country"class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" for="inline-full-name">     
        {{#each countriesArray }}
            <option value="{{this.label}}" {{#if this.isSelected}}selected{{/if}}>{{this.label}}</option>
            {{/each}}
        </select>    
    </div>
  </div>

   <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
        City
      </label>
    </div>
    <div class="md:w-2/3">
      <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="city" type="text" placeholder="city" name="city" value="{{ data.city }}">
    </div>
  </div>
   
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
        Genre
      </label>
    </div>
    <div class="md:w-2/3">
     <select name="genre"class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" for="inline-full-name">     
       {{#each genresObject }}
          <option value="{{this.label}}" {{#if this.isSelected}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
      </select>
    </div>
     </div>

  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
        Season
      </label>
    </div>
    <div class="md:w-2/3">
        <select name="season"class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"for="inline-full-name" value="{{ data.season }}">
            <option value="winter">winter</option>
            <option value="sping">spring</option>
            <option value="summer">summer</option>
            <option value="summer">autumn</option>
        </select>
    </div>
      {{!-- <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="season" type="text" placeholder="season" name="season"> --}}
    </div>
  </div>
   
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
        Description
      </label>
    </div>
    <div class="md:w-2/3">
      <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="description" type="text" placeholder="description" name="description" value="{{ data.description }}">
    </div>
  </div>

 <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
        Event image
      </label>
    </div>
    <div class="md:w-2/3">
      <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="eventImage" type="file" name="eventImage">
      <input type="text" name="existingImage" hidden value="{{imageUrl}}">
    </div>
  </div>

  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <button class="shadow bg-blue-500 hover:bg-gray-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
        Save changes
      </button>
        <button class="mt-6 ml-6 shadow bg-blue-500 hover:bg-gray-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit"><a href="/festivals/{{ data.id }}">Cancel</a>
      </button>
    </div>
  </div>

</form>

   <form class="w-full max-w-sm" action="/festivals/{{data.id}}/delete" method="POST">
    <div class="md:flex md:items-center mb-6 ml-10 mt-5">
      <button class="shadow bg-red-500 hover:bg-gray-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">Delete</button>
    </div>
    </form>
